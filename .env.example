# scripts/setup.sh
#!/bin/bash

# IP Marketplace Backend Setup Script

echo "ðŸš€ Setting up IP Marketplace Backend..."

# Check if Go is installed
if ! command -v go &> /dev/null; then
    echo "âŒ Go is not installed. Please install Go 1.21 or later."
    exit 1
fi

# Check Go version
GO_VERSION=$(go version | awk '{print $3}' | sed 's/go//')
REQUIRED_VERSION="1.21"

if [ "$(printf '%s\n' "$REQUIRED_VERSION" "$GO_VERSION" | sort -V | head -n1)" != "$REQUIRED_VERSION" ]; then
    echo "âŒ Go version $REQUIRED_VERSION or later is required. Current version: $GO_VERSION"
    exit 1
fi

echo "âœ… Go version $GO_VERSION detected"

# Create directories
echo "ðŸ“ Creating project directories..."
mkdir -p uploads/{ip-assets,products,avatars,general}
mkdir -p logs
mkdir -p ssl

# Copy environment file if it doesn't exist
if [ ! -f .env ]; then
    echo "ðŸ“ Creating .env file from example..."
    cp .env.example .env
    echo "âš ï¸  Please edit .env file with your actual configuration values"
fi

# Install dependencies
echo "ðŸ“¦ Installing Go dependencies..."
go mod tidy
go mod download

# Build the application
echo "ðŸ”¨ Building the application..."
go build -o bin/ip-marketplace ./cmd/server

if [ $? -eq 0 ]; then
    echo "âœ… Build successful!"
else
    echo "âŒ Build failed!"
    exit 1
fi

# Check if Docker is available
if command -v docker &> /dev/null; then
    echo "ðŸ³ Docker detected. You can use 'docker-compose up' to run with containers."
else
    echo "âš ï¸  Docker not found. You'll need to set up PostgreSQL and Redis manually."
fi

# Check if PostgreSQL is running (for local development)
if command -v psql &> /dev/null; then
    echo "ðŸ—„ï¸  PostgreSQL client detected."
    echo "Make sure PostgreSQL server is running and database 'ip_marketplace' exists."
else
    echo "âš ï¸  PostgreSQL client not found. Please install PostgreSQL for local development."
fi

echo ""
echo "ðŸŽ‰ Setup complete!"
echo ""
echo "Next steps:"
echo "1. Edit the .env file with your configuration"
echo "2. Set up PostgreSQL database"
echo "3. Run: ./bin/ip-marketplace (or 'go run ./cmd/server')"
echo "4. Or use Docker: docker-compose up"
echo ""
echo "API will be available at: http://localhost:8080"
echo "Health check: http://localhost:8080/health"

